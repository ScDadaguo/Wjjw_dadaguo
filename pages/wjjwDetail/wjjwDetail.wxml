  <view class="cu-form-group">
    <view class="grid col-4 grid-square flex-sub">

      <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
      </view>
      

    </view>
  </view>


  <view class="cu-form-group align-start">
    <view class="title">其他备注</view>
    <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="有备注就写点备注吧！" name="other" value="{{wjjw.orange}}" ></textarea>
  </view>


</form>

  <view class="padding-xl">
    <button class="cu-btn block bg-blue margin-tb-sm lg" bindtap="updateWjjw">
    <text class="cuIcon-loading2 iconfont-spin"></text> 编辑账单</button>

    <button class="cu-btn block bg-red margin-tb-sm lg" bindtap="deleteWjjw">
    <text class="cuIcon-loading2 iconfont-spin"></text> 删除账单</button>
  </view>


</scroll-view>