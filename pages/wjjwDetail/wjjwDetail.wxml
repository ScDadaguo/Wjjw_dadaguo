<scroll-view scroll-y="{{modalName==null}}" class="page {{modalName!=null?'show':''}}">

 <form bindsubmit="formSubmit" bindreset="formReset">
   <view class="cu-form-group">
    <view class="title">日期</view>
    <input disabled="false" placeholder="{{wjjw.workDate}}" name="workDate" disabled="false" value="{{wjjw.workDate}}"  class="guohao_right" placeholder-class="guohao_right" ></input>
  </view>

    <view class="cu-form-group">
    <view class="title">机型</view>
    <input disabled="false" value="{{wjjw.machineName}}" name="machineName" disabled="false" class="guohao_right" ></input>
  </view>

  <view class="cu-form-group">
    <view class="title">工作地点</view>
    <input disabled="false" value="{{wjjw.workPlace}}" name="workPlace" disabled="false" class="guohao_right" ></input>
  </view>


  <view class="cu-form-group">
    <view class="title">开始时间</view>
    <i-cell>
      <input slot="footer" type="digit" value="{{wjjw.startTime}}" name="startTime" class="guohao_right"  />
    </i-cell>
  
  </view>

  
  <view class="cu-form-group">
    <view class="title">结束时间</view>
    <i-cell>
      <input slot="footer" type="digit" value="{{wjjw.endTime}}" name="endTime" class="guohao_right"
      disabled="false"/>
    </i-cell>
  </view>

  <view class="cu-form-group">
    <view class="title">工作时长</view>
    <i-cell>
      <input slot="footer" type="digit" value="{{wjjw.workHours}}" name="workHours" class="guohao_right"
      disabled="false"/>
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        小时
      </view>
    </view>
  </view>



  <view class="cu-form-group">
    <view class="title">单价</view>
    <i-cell>
      <input slot="footer" type="digit" value="{{wjjw.unitPrice}}"  name="unitPrice" class="guohao_right"
      disabled="false"/>
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        元/小时
      </view>
    </view>
  </view>

  <view class="cu-form-group">
    <view class="title">板车趟数</view>
    <i-cell>
      <input slot="footer" type="digit" value="{{wjjw.flatcarCount}}" name="flatcarCount"  class="guohao_right"
      disabled="false"/>
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        趟
      </view>
    </view>
  </view>

  <view class="cu-form-group">
    <view class="title" >板车费</view>
    <i-cell>
      <input slot="footer" type="digit" value="{{wjjw.flatcarFee}}"name="flatcarFee"  class="guohao_right"  disabled="false"/>
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        元
      </view>
    </view>
  </view>

  <view class="cu-form-group">
    <view class="title">合计金额</view>
    <i-cell>
      <input slot="footer" type="digit" value="{{wjjw.totalSum}}"  name="totalSum"  disabled="false" class="guohao_right"  />
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        元
      </view>
    </view>
  </view>

  <view class="cu-bar bg-white margin-top">
		<view class="action">
			账单图片
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>

