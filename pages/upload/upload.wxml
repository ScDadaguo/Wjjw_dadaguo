<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="cu-form-group">
    <view class="title">日期选择</view>
    <picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange" name="workDate">
      <view class="picker">
        {{date}}
      </view>
    </picker>
  </view>

  <view class="cu-form-group margin-top">
    <view class="title">机型</view>
    <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}" name="machineName">
      <view class="picker">
        {{index?picker[index]:'选择机型'}}
      </view>
    </picker>
  </view>

  <view class="cu-form-group">
    <view class="title">工作地点</view>
    <input placeholder="请填写工作地点" value="{{form.workPlace}}" name="workPlace" ></input>
  </view>


  <view class="cu-form-group">
    <view class="title">开始时间</view>
    <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="StartTimeChange" name="startTime">
      <view class="picker">
        {{startTime}}
      </view>
    </picker>
  </view>

  <view class="cu-form-group">
    <view class="title">结束时间</view>
    <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="EndTimeChange" name="endTime">
      <view class="picker">
        {{endTime}}
      </view>
    </picker>
  </view>

  <view class="cu-form-group">
    <view class="title">工作时长</view>
    <i-cell>
      <input slot="footer" type="digit" placeholder="" value="{{form.workHours}}" name="workHours" />
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        小时
      </view>
    </view>
  </view>



  <view class="cu-form-group">
    <view class="title">单价</view>
    <i-cell>
      <input slot="footer" type="digit" placeholder=""  value="{{form.unitPrice}}" name="unitPrice" />
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        元/小时
      </view>
    </view>
  </view>

  <view class="cu-form-group">
    <view class="title">板车趟数</view>
    <i-cell>
      <input slot="footer" type="digit" placeholder="" value="{{form.flatcarCount}}" name="flatcarCount" />
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        趟
      </view>
    </view>
  </view>

  <view class="cu-form-group">
    <view class="title">板车费</view>
    <i-cell>
      <input slot="footer" type="digit" placeholder="" value="{{form.flatcarFee}}" name="flatcarFee" />
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        元
      </view>
    </view>
  </view>

  <view class="cu-form-group">
    <view class="title">合计金额</view>
    <i-cell>
      <input slot="footer" type="digit" placeholder="" value="{{form.totalSum}}" name="totalSum" />
    </i-cell>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        元
      </view>
    </view>
  </view>

  <view class="cu-bar bg-white margin-top">
    <view class="action">
      实体账单照片上传
    </view>
    <view class="action">
      {{imgList.length}}/4
    </view>
  </view>


  <view class="cu-form-group">
    <view class="grid col-4 grid-square flex-sub">

      <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
        <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
          <text class="cuIcon-close"></text>
        </view>
      </view>
      <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
        <text class="cuIcon-cameraadd"></text>
      </view>

    </view>
  </view>


  <view class="cu-form-group align-start">
    <view class="title">其他备注</view>
    <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="有备注就写点备注吧！" name="other" value="{{wjjw.other}}" ></textarea>
  </view>

<button class="cu-btn block bg-blue margin-tb-sm lg" form-type="submit">
    <text class="cuIcon-upload"></text> 添加账单</button>

  <button class="cu-btn lines-blue round lg shadow" form-type="submit">
    <text class="cuIcon-upload"></text> 添加账单</button>

    
</form>

